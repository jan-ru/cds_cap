<mvc:View
	controllerName="demo.ui5.view.Hierarchies"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	displayBlock="true"
	height="100%"
>
	<tnt:ToolPage id="toolPageHierarchies">
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="false"
				itemSelect=".onItemSelect"
			>
				<tnt:NavigationList>
					<tnt:NavigationListItem
						text="Tables Overview"
						icon="sap-icon://hierarchy"
						key="mainHierarchy"
						visible="{appView>/showMainHierarchy}"
					/>
					<tnt:NavigationListItem
						text="Twinfield"
						expanded="true"
					>
						<tnt:NavigationListItem
							text="General Ledger"
							icon="sap-icon://general-ledger-document"
							key="gl"
							visible="{appView>/showGL}"
						/>
					</tnt:NavigationListItem>
					<tnt:NavigationListItem
						text="Newbase"
						expanded="false"
					>
						<tnt:NavigationListItem
							text="SCA_ServiceAgreements"
							key="newbase_sca"
							visible="{appView>/showSCA}"
						/>
						<tnt:NavigationListItem
							text="PGA_ProductGroup"
							key="newbase_pga"
							visible="{appView>/showPGA}"
						/>
						<tnt:NavigationListItem
							text="VFA_SalesInvoice"
							key="newbase_vfa"
							visible="{appView>/showVFA}"
						/>
						<tnt:NavigationListItem
							text="VOA_SalesOrder"
							key="newbase_voa"
							visible="{appView>/showVOA}"
						/>
						<tnt:NavigationListItem
							text="ESL_Product"
							key="newbase_esl"
							visible="{appView>/showESL}"
						/>
						<tnt:NavigationListItem
							text="IOA_PurchaseOrderLine"
							key="newbase_ioa"
							visible="{appView>/showIOA}"
						/>
						<tnt:NavigationListItem
							text="GUA_DeliveryNote"
							key="newbase_gua"
							visible="{appView>/showGUA}"
						/>
						<tnt:NavigationListItem
							text="OFA_StillToFollowUpSalesQuotations"
							key="newbase_ofa"
							visible="{appView>/showOFA}"
						/>
						<tnt:NavigationListItem
							text="SBA_ServiceRequest"
							key="newbase_sba"
							visible="{appView>/showSBA}"
					/>					</tnt:NavigationListItem>
					<tnt:NavigationListItem
						text="Inventree"
						expanded="false"
					>
						<tnt:NavigationListItem
							text="VG"
							key="inventree_vg"
						/>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem
							text="Version {versionInfo>/appVersion}"
							icon="sap-icon://information"
							key="version"
						/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer
				id="pageContainer"
				initialPage="pageMainHierarchy"
				height="100%"
				width="100%"
			>
				<pages>
					<Page
						id="pageMainHierarchy"
						enableScrolling="true"
						showHeader="false"
					>
						<Text text="Tables Overview Page Content Placeholder" />
					</Page>
					<Page
						id="pageGL"
						enableScrolling="false"
						showHeader="false"
					>
						<core:Fragment
							fragmentName="demo.ui5.view.fragments.GLTab"
							type="XML"
						/>
					</Page>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
