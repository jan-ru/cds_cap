<mvc:View
	controllerName="demo.ui5.view.Hierarchies"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	displayBlock="true"
	height="100%"
>
	<tnt:ToolPage id="toolPageHierarchies">
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="false"
				itemSelect=".onItemSelect"
			>
				<tnt:NavigationList>
					<tnt:NavigationListItem
						text="Tables Overview"
						icon="sap-icon://hierarchy"
						key="mainHierarchy"
						visible="{appView>/showMainHierarchy}"
					/>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem
							text="Version {versionInfo>/appVersion}"
							icon="sap-icon://information"
							key="version"
						/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer
				id="pageContainer"
				initialPage="pageMainHierarchy"
				height="100%"
				width="100%"
			>
				<pages>
					<Page
						id="pageMainHierarchy"
						enableScrolling="true"
						showHeader="false"
					>
						<Text text="Tables Overview Page Content Placeholder" />
					</Page>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
