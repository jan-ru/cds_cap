<core:FragmentDefinition
  xmlns:core="sap.ui.core"
  xmlns:m="sap.m"
  xmlns="sap.ui.table"
>
  <TreeTable
    id="debtorsTree"
    rows="{
      path: 'debtors>/root',
      parameters: {
        arrayNames: ['nodes']
      }
    }"
    selectionMode="None"
    enableColumnFreeze="true"
    visibleRowCountMode="Auto"
  >
    <columns>
      <Column width="24rem">
        <m:Label text="Debtor Name" />
        <template>
          <m:Text
            text="{debtors>name}"
            wrapping="false"
          />
        </template>
      </Column>
      <Column
        hAlign="End"
        width="8rem"
      >
        <m:Label text="Amount" />
        <template>
          <m:Text text="{
            path: 'debtors>amount',
            formatter: '.formatter.formatCurrency'
          }" />
        </template>
      </Column>
    </columns>
  </TreeTable>
</core:FragmentDefinition>
