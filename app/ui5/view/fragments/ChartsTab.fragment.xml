<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:demo="demo.ui5.control"
>
	<c:Fragment
		fragmentName="demo.ui5.view.fragments.PeriodSelector"
		type="XML"
	/>
	<VBox>
		<Title
			text="Revenue NOI"
			level="H3"
			class="sapUiSmallMarginBottom"
		/>
		<demo:ChartJS
			chartType="bar"
			data="{charts>/revenueNOI}"
			options="{charts>/options}"
		/>
	</VBox>
	<!-- Revenue WAT -->
	<VBox>
		<Title
			text="Revenue WAT"
			level="H3"
			class="sapUiSmallMarginBottom"
		/>
		<demo:ChartJS
			chartType="bar"
			data="{charts>/revenueWAT}"
			options="{charts>/options}"
		/>
	</VBox>
	<!-- Revenue Total -->
	<VBox>
		<Title
			text="Revenue Total (NOI + WAT)"
			level="H3"
			class="sapUiSmallMarginBottom"
		/>
		<demo:ChartJS
			chartType="bar"
			data="{charts>/revenueTotal}"
			options="{charts>/options}"
		/>
	</VBox>
</c:FragmentDefinition>