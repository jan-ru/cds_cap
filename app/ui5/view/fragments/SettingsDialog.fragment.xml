<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		title="Menu Settings"
		contentWidth="450px"
		contentHeight="600px"
	>
		<content>
			<IconTabBar
				id="idIconTabBarSettings"
				expanded="true"
				class="sapUiResponsiveContentPadding"
			>
				<items>
					<IconTabFilter
						text="Reports"
						key="reports"
					>
						<VBox class="sapUiSmallMargin">
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
							>
								<Text text="Show Reports" />
								<Switch state="{appView>/showReports}" />
							</HBox>
							<!-- Finance Group -->
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
							>
								<Text text="Finance (Group)" />
								<Switch state="{appView>/showFinance}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Income Statement"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showIncome}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Balance Sheet"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showBalanceSheet}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Financial Statements LTM"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showPivot}" />
							</HBox>
							<!-- Working Capital Group -->
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Working Capital (Group)" />
								<Switch state="{appView>/showWorkingCapital}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Creditors"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showCreditors}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Debtors"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showDebtors}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Inventory"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showInventory}" />
							</HBox>
							<!-- Period Comparison Group -->
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Period Comparison (Group)" />
								<Switch state="{appView>/showPeriodComparison}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Financial Statements"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showCombined}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Revenue by Cost Center"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showSales}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Revenue LTM"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showRevenueLTM}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text
									text="Charts"
									class="sapUiMediumMarginBegin"
								/>
								<Switch state="{appView>/showCharts}" />
							</HBox>
							<!-- Controls -->
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Controls" />
								<Switch state="{appView>/showControls}" />
							</HBox>
						</VBox>
					</IconTabFilter>
					<IconTabFilter
						text="Tables"
						key="hierarchies"
					>
						<VBox class="sapUiSmallMargin">
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
							>
								<Text text="Show Hierarchies" />
								<Switch state="{appView>/showHierarchies}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
							>
								<Text text="Main Hierarchy" />
								<Switch state="{appView>/showMainHierarchy}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="General Ledger" />
								<Switch state="{appView>/showGL}" />
							</HBox>
							<!-- Newbase Group -->
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="SCA_ServiceAgreements" />
								<Switch state="{appView>/showSCA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="PGA_ProductGroup" />
								<Switch state="{appView>/showPGA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="VFA_SalesInvoice" />
								<Switch state="{appView>/showVFA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="VOA_SalesOrder" />
								<Switch state="{appView>/showVOA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="ESL_Product" />
								<Switch state="{appView>/showESL}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="IOA_PurchaseOrderLine" />
								<Switch state="{appView>/showIOA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="GUA_DeliveryNote" />
								<Switch state="{appView>/showGUA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="OFA_StillToFollowUpSalesQuotations" />
								<Switch state="{appView>/showOFA}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="SBA_ServiceRequest" />
								<Switch state="{appView>/showSBA}" />
							</HBox>
						</VBox>
					</IconTabFilter>
					<IconTabFilter
						text="Imports"
						key="imports"
					>
						<VBox class="sapUiSmallMargin">
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
							>
								<Text text="Show Imports" />
								<Switch state="{appView>/showImports}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
							>
								<Text text="Data Sources" />
								<Switch state="{appView>/showDataSources}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Staging" />
								<Switch state="{appView>/showStaging}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Tables" />
								<Switch state="{appView>/showTables}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Data Model" />
								<Switch state="{appView>/showDataModel}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Metrics" />
								<Switch state="{appView>/showMetrics}" />
							</HBox>
							<HBox
								alignItems="Center"
								justifyContent="SpaceBetween"
								width="100%"
								class="sapUiSmallMarginTop"
							>
								<Text text="Log" />
								<Switch state="{appView>/showLog}" />
							</HBox>
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<buttons>
			<Button
				text="Save"
				type="Emphasized"
				press=".onSaveSettings"
			/>
			<Button
				text="Close"
				press=".onCloseSettings"
			/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
