<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:t="sap.ui.table"
>
    <t:TreeTable
        id="pivotTable"
        rows="{pivot>/root/nodes}"
        selectionMode="None"
        visibleRowCountMode="Auto"
        enableColumnFreeze="true"
    >
        <t:extension>
            <core:Fragment
                fragmentName="demo.ui5.view.fragments.PeriodSelectorLTM"
                type="XML"
            />
        </t:extension>
        <t:footer>
            <m:VBox>
                <core:Fragment
                    fragmentName="demo.ui5.view.fragments.TechnicalInfo"
                    type="XML"
                />
            </m:VBox>
        </t:footer>
        <t:columns>
            <t:Column width="20rem">
                <m:Label text="Account" />
                <t:template>
                    <m:Text
                        text="{pivot>name}"
                        wrapping="false"
                    />
                </t:template>
            </t:Column>
            <!-- Columns will be added dynamically by Controller -->
        </t:columns>
    </t:TreeTable>
</core:FragmentDefinition>
