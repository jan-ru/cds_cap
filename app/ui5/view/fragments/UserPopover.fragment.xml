<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Popover
		id="userPopover"
		title="User Info"
		placement="Bottom"
	>
		<content>
			<VBox class="sapUiSmallMargin">
				<Label text="Logged in as:" />
				<Text
					text="{versionInfo>/currentUser}"
					class="sapMTextBold"
				/>
				<VBox class="sapUiTinyMarginTop">
					<Label text="Name:" />
					<Text text="{versionInfo>/userName}" />
				</VBox>
			</VBox>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="Close"
						press=".onUserPopoverClose"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Popover>
</core:FragmentDefinition>
