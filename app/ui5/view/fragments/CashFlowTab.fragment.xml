<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
	xmlns="sap.ui.table"
>
	<core:Fragment
		fragmentName="demo.ui5.view.fragments.PeriodSelector"
		type="XML"
	/>
	<TreeTable
		id="cashFlowTree"
		rows="{
			path: 'cashFlow>/root',
			parameters: {
				arrayNames: ['nodes']
			}
		}"
		selectionMode="None"
		enableColumnFreeze="true"
		visibleRowCountMode="Auto"
	>
		<columns>
			<Column width="24rem">
				<m:Label text="Cash Flow Item" />
				<template>
					<m:Text
						text="{cashFlow>name}"
						wrapping="false"
					/>
				</template>
			</Column>
			<Column
				hAlign="End"
				width="8rem"
			>
				<m:Label text="{viewSettings>/periodA/year}" />
				<template>
					<m:Text text="{
						path: 'cashFlow>amountA',
						formatter: '.formatter.formatCurrency'
					}" />
				</template>
			</Column>
		</columns>
	</TreeTable>
</core:FragmentDefinition>
