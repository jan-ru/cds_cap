<mvc:View
	controllerName="demo.ui5.view.Imports"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:code="sap.ui.codeeditor"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	displayBlock="true"
	height="100%"
>
	<tnt:ToolPage
		id="toolPageImports"
		sideExpanded="true"
	>
		<tnt:sideContent>
			<tnt:SideNavigation
				id="sideNavigation"
				expanded="true"
				itemSelect=".onItemSelect"
			>
				<tnt:NavigationList>
					<tnt:NavigationListItem
						text="Data Sources"
						icon="sap-icon://database"
						key="dataSources"
						visible="{appView>/showDataSources}"
					/>
					<tnt:NavigationListItem
						text="Staging"
						icon="sap-icon://header"
						key="preProcessing"
						visible="{appView>/showStaging}"
					/>
					<tnt:NavigationListItem
						text="Tables"
						icon="sap-icon://table-view"
						key="tables"
						visible="{appView>/showTables}"
					/>
					<tnt:NavigationListItem
						text="Data Model"
						icon="sap-icon://tree"
						key="dataModel"
						visible="{appView>/showDataModel}"
					/>
					<tnt:NavigationListItem
						text="Metrics"
						icon="sap-icon://bar-chart"
						key="metrics"
						visible="{appView>/showMetrics}"
					/>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem
							text="Log"
							icon="sap-icon://log"
							key="log"
							visible="{appView>/showLog}"
						/>
						<tnt:NavigationListItem
							text="Version {versionInfo>/appVersion}"
							icon="sap-icon://information"
							key="version"
						/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer
				id="pageContainerImports"
				initialPage="pageDataSources"
			>
				<pages>
					<Page
						id="pageDataSources"
						enableScrolling="true"
						showHeader="false"
					>
						<List
							headerText="Data Sources"
							items="{versionInfo>/inputFiles}"
						>
							<StandardListItem
								title="{versionInfo>}"
								type="Active"
								press=".onFilePress"
								icon="sap-icon://database"
								app:fileType="dataSource"
							/>
						</List>
					</Page>
					<Page
						id="pagePreProcessing"
						enableScrolling="true"
						showHeader="false"
					>
						<List
							headerText="Staging Models"
							items="{versionInfo>/stagingFiles}"
						>
							<StandardListItem
								title="{versionInfo>}"
								type="Active"
								press=".onFilePress"
								icon="sap-icon://header"
								app:fileType="staging"
							/>
						</List>
					</Page>
					<Page
						id="pageTables"
						enableScrolling="true"
						showHeader="false"
					>
						<List
							headerText="Database Tables"
							items="{versionInfo>/databaseTables}"
						>
							<StandardListItem
								title="{versionInfo>}"
								type="Active"
								press=".onTablePress"
								icon="sap-icon://table-view"
								app:tableName="{versionInfo>}"
							/>
						</List>
					</Page>
					<Page
						id="pageDataModel"
						enableScrolling="true"
						showHeader="false"
					>
						<Text text="Data Model Placeholder" />
					</Page>
					<Page
						id="pageMetrics"
						enableScrolling="true"
						showHeader="false"
					>
						<List
							headerText="Metrics Models"
							items="{versionInfo>/metricsFiles}"
						>
							<StandardListItem
								title="{versionInfo>}"
								type="Active"
								press=".onFilePress"
								icon="sap-icon://bar-chart"
								app:fileType="metrics"
							/>
						</List>
					</Page>
					<Page
						id="pageFileViewer"
						enableScrolling="false"
						showNavButton="true"
						navButtonPress=".onNavBackToFileList"
						title="{viewer>/fileName}"
					>
						<code:CodeEditor
							id="codeEditor"
							value="{viewer>/content}"
							type="{viewer>/type}"
							editable="false"
							height="100%"
						/>
					</Page>
					<Page
						id="pageTableViewer"
						enableScrolling="true"
						showNavButton="true"
						navButtonPress=".onNavBackToTableList"
						title="{tableViewer>/tableName}"
					>
						<Table
							id="dataTable"
							items="{tableViewer>/items}"
							growing="true"
							growingThreshold="50"
						>
							<columns>
								<!-- Dynamic columns will be added via controller -->
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<!-- Dynamic cells will be added via controller -->
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</Page>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
