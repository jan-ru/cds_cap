<mvc:View controllerName="chartscustom.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:chart="chartscustom.control" height="100%">
    <Page title="Revenue Charts" enableScrolling="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                    <Label text="Period A:" class="sapUiTinyMarginEnd"/>
                    <Select id="yearA" selectedKey="{viewSettings>/periodA/year}" change=".onPeriodChange" width="6rem">
                        <items>
                            <core:Item key="2023" text="2023" xmlns:core="sap.ui.core"/>
                            <core:Item key="2024" text="2024" xmlns:core="sap.ui.core"/>
                            <core:Item key="2025" text="2025" xmlns:core="sap.ui.core"/>
                        </items>
                    </Select>
                    <Label text="Period B:" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
                    <Select id="yearB" selectedKey="{viewSettings>/periodB/year}" change=".onPeriodChange" width="6rem">
                        <items>
                            <core:Item key="2023" text="2023" xmlns:core="sap.ui.core"/>
                            <core:Item key="2024" text="2024" xmlns:core="sap.ui.core"/>
                            <core:Item key="2025" text="2025" xmlns:core="sap.ui.core"/>
                        </items>
                    </Select>
                </HBox>
                
                <VBox class="sapUiSmallMarginTop">
                    <Title text="Revenue NOI" level="H3" class="sapUiSmallMarginBottom"/>
                    <chart:ChartJS chartType="bar" data="{charts>/revenueNOI}" options="{charts>/options}"/>
                </VBox>
                
                <VBox class="sapUiSmallMarginTop">
                    <Title text="Revenue WAT" level="H3" class="sapUiSmallMarginBottom"/>
                    <chart:ChartJS chartType="bar" data="{charts>/revenueWAT}" options="{charts>/options}"/>
                </VBox>
                
                <VBox class="sapUiSmallMarginTop">
                    <Title text="Revenue Total (NOI + WAT)" level="H3" class="sapUiSmallMarginBottom"/>
                    <chart:ChartJS chartType="bar" data="{charts>/revenueTotal}" options="{charts>/options}"/>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
