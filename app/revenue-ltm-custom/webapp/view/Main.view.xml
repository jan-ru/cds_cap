<mvc:View
    controllerName="revenueltmcustom.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:t="sap.ui.table"
    height="100%"
>
    <m:Page
        title="Revenue Last 12 Months"
        enableScrolling="true"
    >
        <m:content>
            <t:Table
                id="idRevenueReportTable"
                visibleRowCountMode="Auto"
                selectionMode="None"
                enableColumnReordering="false"
            >
                <t:extension>
                    <core:Fragment
                        fragmentName="revenueltmcustom.view.fragments.PeriodSelectorLTM"
                        type="XML"
                    />
                </t:extension>
                <t:columns>
                    <t:Column
                        width="150px"
                        sortProperty="RevenueType"
                        filterProperty="RevenueType"
                    >
                        <m:Label text="Revenue Type" />
                        <t:template>
                            <m:Text text="{revenueLTM>RevenueType}" />
                        </t:template>
                    </t:Column>
                    <t:Column
                        width="150px"
                        sortProperty="CostCenterGroup"
                        filterProperty="CostCenterGroup"
                    >
                        <m:Label text="Cost Center" />
                        <t:template>
                            <m:Text text="{revenueLTM>CostCenterGroup}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </m:content>
    </m:Page>
</mvc:View>
