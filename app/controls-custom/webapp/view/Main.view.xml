<mvc:View controllerName="controlscustom.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table" height="100%">
    <Page title="Controls" enableScrolling="true">
        <content>
            <t:Table id="controlsTable" rows="{controls>/rows}" visibleRowCountMode="Auto" selectionMode="None" enableColumnReordering="false" class="sapUiSizeCompact">
                <t:columns>
                    <t:Column width="6rem" sortProperty="PeriodYear" filterProperty="PeriodYear">
                        <Label text="Year" />
                        <t:template>
                            <Text text="{controls>PeriodYear}" />
                        </t:template>
                    </t:Column>
                    <t:Column width="6rem" sortProperty="PeriodMonth" filterProperty="PeriodMonth">
                        <Label text="Month" />
                        <t:template>
                            <Text text="{controls>PeriodMonth}" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10rem" hAlign="End">
                        <Label text="BAS Debit" />
                        <t:template>
                            <Text text="{path: 'controls>BasTotalDebit', formatter: '.formatter.formatCurrency'}" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10rem" hAlign="End">
                        <Label text="BAS Credit" />
                        <t:template>
                            <Text text="{path: 'controls>BasTotalCredit', formatter: '.formatter.formatCurrency'}" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10rem" hAlign="End">
                        <Label text="BAS Balance" />
                        <t:template>
                            <ObjectStatus text="{path: 'controls>BasTotalBalance', formatter: '.formatter.formatCurrency'}" state="{= ${controls>BasTotalBalance} !== 0 ? 'Error' : 'Success' }" textDirection="LTR" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10rem" hAlign="End">
                        <Label text="PNL Debit" />
                        <t:template>
                            <Text text="{path: 'controls>PnlTotalDebit', formatter: '.formatter.formatCurrency'}" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10rem" hAlign="End">
                        <Label text="PNL Credit" />
                        <t:template>
                            <Text text="{path: 'controls>PnlTotalCredit', formatter: '.formatter.formatCurrency'}" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10rem" hAlign="End">
                        <Label text="PNL Balance" />
                        <t:template>
                            <Text text="{path: 'controls>PnlTotalBalance', formatter: '.formatter.formatCurrency'}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
    </Page>
</mvc:View>
