<mvc:View controllerName="metricscustom.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:code="sap.ui.codeeditor" height="100%">
    <Page title="Metrics" enableScrolling="false">
        <content>
            <NavContainer id="navContainer" initialPage="listPage">
                <pages>
                    <Page id="listPage" enableScrolling="true">
                        <List headerText="Metrics Files" items="{versionInfo>/metricsFiles}">
                            <StandardListItem title="{versionInfo>}" type="Active" press=".onFilePress" icon="sap-icon://bar-chart"/>
                        </List>
                    </Page>
                    <Page id="detailPage" enableScrolling="false" showNavButton="true" navButtonPress=".onNavBack" title="{viewer>/fileName}">
                        <code:CodeEditor id="codeEditor" value="{viewer>/content}" type="{viewer>/type}" editable="false" height="100%"/>
                    </Page>
                </pages>
            </NavContainer>
        </content>
    </Page>
</mvc:View>
