{
  "name": "my-analytics-cap",
  "version": "0.3.8",
  "private": true,
  "description": "A CAP project with OData V4 analytical service",
  "repository": "<repository>",
  "license": "UNLICENSED",
  "workspaces": [
    "app/*"
  ],
  "scripts": {
    "start": "cds-serve",
    "deploy": "cds deploy --to sqlite",
    "watch": "cds watch",
    "build": "cds build --production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ui": "npm run test --workspaces --if-present",
    "test:all": "npm test && npm run test:ui",
    "lint": "eslint srv app --ext .js",
    "lint:fix": "eslint srv app --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "build:ui": "npm run build --workspaces --if-present",
    "start:ui": "npm run start --workspaces --if-present",
    "lint:ui": "npm run lint --workspaces --if-present",
    "upgrade-wdio": "npm install --save-dev @wdio/cli@latest @wdio/local-runner@latest @wdio/mocha-framework@latest @wdio/spec-reporter@latest @wdio/utils@latest"
  },
  "dependencies": {
    "@cap-js/sqlite": "^2.0.5",
    "@sap/cds": "^9.5.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@sap/cds-dk": "^9.5.0",
    "@sap/ux-specification": "^1.108.28",
    "@ui5/cli": "^4.0.9",
    "@wdio/cli": "^9.22.0",
    "@wdio/local-runner": "^9.22.0",
    "@wdio/mocha-framework": "^9.22.0",
    "@wdio/spec-reporter": "^9.20.0",
    "@wdio/utils": "^9.22.0",
    "chromedriver": "^131.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "wdio-ui5-service": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "../database/db.sqlite"
        },
        "[production]": {
          "credentials": {
            "url": "../database/db.sqlite"
          }
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "alice": {
            "password": "alice",
            "id": "alice@company.com",
            "attr": {
              "name": "Alice Anderson"
            }
          },
          "bob": {
            "password": "bob",
            "id": "bob@company.com",
            "attr": {
              "name": "Bob Brown"
            }
          },
          "charlie": {
            "password": "charlie",
            "id": "charlie@company.com",
            "attr": {
              "name": "Charlie Chen"
            }
          }
        }
      }
    }
  }
}
